<div class="container">
  <h1 class="text-center"><%= @list.name %></h1>
  <div class="d-flex flex-column">
    <% (@list.bookmarks).each do |bookmark| %>
      <div class="card-product p-2 mt-4">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
           <p><%= bookmark.movie.overview %><br></p>
           <p><%= bookmark.movie.rating %>      <%= bookmark.comment%></p>
            <%= link_to "Delete", bookmark_path(bookmark),class:"btn btn-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-primary mt-4" %>
</div>
